<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="eu.fistar.sdcs.pa.MainActivity">

    <TextView
        android:id="@+id/lblTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Start the service directly if it's not started elsewhere"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/lblServiceFeedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Protocol Adapter in unknown status"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/lblTitle" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_below="@+id/lblServiceFeedback">

        <Button
            android:id="@+id/btnStartService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="startService"
            android:text="Start Protocol Adapter" />

        <Button
            android:id="@+id/btnStopService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:enabled="false"
            android:onClick="stopService"
            android:text="Stop Protocol Adapter" />

        <Button
            android:id="@+id/btnConnectDevices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:enabled="true"
            android:onClick="connectDevices"
            android:text="Connect to all devices" />

        <Button
            android:id="@+id/btnToggleConfig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:enabled="true"
            android:onClick="toggleConfig"
            android:text="Toggle Configuration" />

    </LinearLayout>

</RelativeLayout>
